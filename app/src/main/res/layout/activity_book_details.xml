<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".BookDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar with Back, Title, Bookmark, Share -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                app:tint="@color/primaryColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/book"
                android:textColor="@color/primaryColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnBookmark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/bookmark"
                android:src="@drawable/ic_bookmark"
                app:tint="@color/primaryColor" />

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_share"
                app:tint="@color/primaryColor" />
        </LinearLayout>

        <!-- Book Cover -->
        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/book_cover"
            android:scaleType="centerCrop"
            android:src="@drawable/book_placeholder" />

        <!-- Title -->
        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="@color/primaryColor"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="A LOVE STORY" />

        <!-- Author -->
        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/grey"
            android:textSize="16sp"
            tools:text="By Charlie Modkel" />

        <!-- Rating and Pages -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bookRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                tools:text="â­ 5.0" />

            <TextView
                android:id="@+id/bookPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="300 Pages" />
        </LinearLayout>

        <!-- Format Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHardCover"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hard_cover"
                android:textColor="@color/grey" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPdf"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="@string/pdf"
                android:textColor="@color/grey" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAudiobook"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/audiobook"
                android:textColor="@color/grey" />
        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/bookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryColor"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="$25.99" />

        <!-- Chapter Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChapter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/primaryColor"
            android:text="@string/chapter_1"
            android:textColor="@color/offWhite" />

        <!-- Tabs: About / Reviews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tabAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/about_the_book"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tabReviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reviews" />
        </LinearLayout>

        <!-- Book Description -->
        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Lorem Ipsum is simply dummy text of the printing..." />

        <!-- Sample and Add to Bag Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSample"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/sample"
                android:textColor="@color/offWhite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToBag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/add_to_bag"
                android:textColor="@color/offWhite" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>